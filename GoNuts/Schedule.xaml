<Page
    x:Class="GoNuts.Schedule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GoNuts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Green">
        
        <StackPanel Margin="20,20,20,20" MinWidth="2000">
            <Image HorizontalAlignment="Left" Source="/assets/white-logo.png" Width="200" />

            <StackPanel Orientation="Horizontal" Margin="30,50,0,0">
                <TextBlock VerticalAlignment="Center" Text="Pickup: " Foreground="White"/>
                <CalendarDatePicker/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="30,30,0,0">
                <TimePicker ClockIdentifier="12HourClock"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Page>
